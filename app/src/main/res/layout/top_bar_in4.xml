<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="50dp"
    android:layout_width="match_parent"
    android:background="@color/Mint05"
    android:orientation="horizontal"
    android:id="@+id/Ln_topIn4"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:src="@drawable/item_lock_person"
            android:padding="10dp"
        android:layout_height="50dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="6"
        android:text="Thông tin cơ bản"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:layout_height="match_parent"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:id="@+id/bt_drawer"
        android:layout_gravity="end"
        android:src="@drawable/item_menu"
        android:layout_height="50dp"/>
</LinearLayout>